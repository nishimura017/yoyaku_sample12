<h2>予約済み施設一覧</h2>

<table>
  <thead>
    <tr>
      <th>施設名</th>
      <th>紹介文</th>
      <th>料金</th>
      <th>チェックイン</th>
      <th>チェックアウト</th>
      <th>予約確定日時</th>
    </tr>
  </thead>
  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= link_to(reservation.room.roomname, controller: 'rooms', action: 'show', id: reservation.room.id) %></td>
        <td><%= reservation.room.description %></td>
        <td><%= reservation.room.price %></td>
        <td><%= reservation.checkin_at %></td>
        <td><%= reservation.checkout_at %></td>
        <td><%= reservation.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>