<h2>プロフィール編集</h2>

<%= form_for @user do |f| %>

  <div class="mb-3"> 
    <%= f.label :名前, class:"form-label"%>
    <%= f.text_field :username, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :自己紹介, class:"form-label" %>
    <%= f.text_area :profile, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :プロフィール画像 %>
    <%= f.file_field :profile_image %>
  </div>

  <div>
    <%= f.submit "保存", class:"btn btn-primary" %>
  </div>
  
<% end %>
  
  