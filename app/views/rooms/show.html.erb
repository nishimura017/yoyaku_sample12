<h2>施設詳細</h2>

<div class="room-show">
  <div class="room-show-container">
    <div class="room-show-image">
      <% if @room.room_image.present? %>
        <%= image_tag @room.room_image.url(:room_image), alt: "room image", width: 300, height: 200  %>
      <% else %>
        <%= image_tag "/images/default-room-image.png", alt: "Default room image",width: 300, height: 200   %>
      <% end %>
    </div>
    <div class="room-show-information">
      <div>
        <h3><%= @room.roomname %></h3>
      </div>

      <div>
        <%= @room.address %>
      </div>

      <div>
        <%= @room.description %>
      </div>

      <div>
        <p>¥<%= @room.price %>~</p>
      </div>

      <div class="reservation-form">
        <%= form_with model: @reservation, method: :post, url: reservation_confirm_path do |f| %>
          <%= f.hidden_field :room_id, value: @room.id %>
          <%= f.hidden_field :user_id, value: current_user.id %>
        
          <%= f.label :checkin_at, "開始日" %>
          <%= f.date_field :checkin_at, class: "form-control mb-4", value: @reservation.checkin_at %>

          <%= f.label :checkout_at, "終了日" %>
          <%= f.date_field :checkout_at, class: "form-control mb-4", value: @reservation.checkout_at %>
          

          <%= f.label :person_count, "宿泊人数" %>
          <%= f.number_field :person_count, class: "form-control mb-4" %>
          <%= f.submit"予約する", class: "btn btn-primary form-contro" %>
          <%= link_to "戻る", :back;%>
        <% end %>     
      </div>
    </div>
  </div>
</div>

